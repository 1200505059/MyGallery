@model TblGiris
@{
    ViewData["Title"] = "GirisGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="border: 1px solid green; border-radius:2%;">
    <br />
    <br />


    <form method="post">
        <input type="hidden" asp-for="GirisID" />
        <div class="form-group">
            <label asp-for="GirisAdSoyad"></label>
            <input type="text" class="form-control" asp-for="GirisAdSoyad" placeholder="Ad Soyad Giriniz..." required />
            <label asp-for="GirisAciklama"></label>
            <textarea type="text" class="form-control" asp-for="GirisAciklama" placeholder="Açıklama Giriniz..." required></textarea>
            <label asp-for="GirisFacebookURL"></label>
            <input type="text" class="form-control" asp-for="GirisFacebookURL" placeholder="Facebook Adresi..." required />
            <label asp-for="GirisLinkedinURL"></label>
            <input type="text" class="form-control" asp-for="GirisLinkedinURL" placeholder="Linkedin Adresi..." required />
            <label asp-for="GirisMailURL"></label>
            <input type="email" class="form-control" asp-for="GirisMailURL" placeholder="Mail Adresi..." required />
            <label asp-for="GirisInstagramURL"></label>
            <input type="text" class="form-control" asp-for="GirisInstagramURL" placeholder="Instagram Adresi..." required />
            <br />
            <button type="submit" class="btn btn-outline-success">GÜNCELLE</button>
        </div>
    </form>

    <br />

</div>

