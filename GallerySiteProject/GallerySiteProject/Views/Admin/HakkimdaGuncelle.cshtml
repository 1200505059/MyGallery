@model TblHakkimda
@{
    ViewData["Title"] = "HakkimdaGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="border: 1px solid yellowgreen; border-radius:2%;">
    <br />
    <br />


    <form method="post">
        <input type="hidden" asp-for="HakkimdaID" />

        <div class="form-group">
            <label asp-for="HakkimdaBaslik" >BAŞLIK</label>
            <input type="text" class="form-control" asp-for="HakkimdaBaslik" placeholder="Başlık Giriniz..." required />
            <label asp-for="HakkimdaGiris"> ALT BAŞLIK</label>
            <input type="text" class="form-control" asp-for="HakkimdaGiris" placeholder="Alt Başlık Giriniz..." required/>
            <label asp-for="HakkimdaText">METİN</label>
            <textarea type="text" class="form-control" asp-for="HakkimdaText" placeholder="Açıklama Giriniz..." style="height:150px;" required></textarea>
            <br />
            <div class="row mb-3">
                <label for="inputNumber" class="col-sm-2 col-form-label">RESİM:</label>
                <div class="col-sm-10">
                    <input class="form-control" type="file" asp-for="HakkimdaImageURL" id="formFile" required>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-outline-success"> GÜNCELLE</button>
            <a href="/Admin/Hakkimda" class="btn btn-outline-danger">Geri</a>
        </div>
    </form>

    <br />

</div>


